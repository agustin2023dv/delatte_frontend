{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "src/shared/*"
      ],
      "@features/*": [
        "src/app/features/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@hooks/*": [
        "src/shared/hooks/*"
      ],
      "@ui/*": [
        "src/shared/components/ui/*"
      ]
    }
  },
  "include": [
    "env.d.ts",
    "src/**/*.tsx",
    "src/**/*.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
